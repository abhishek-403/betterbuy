generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pricecheckpoints {
  id        Int     @id @default(autoincrement())
  price     Float
  currency  String
  date      String
  product   Product @relation(fields: [productId], references: [id])
  productId Int
}

model Product {
  id               Int                @id @default(autoincrement())
  name             String
  price            Float
  currency         String
  image            String
  provider         String?
  url              String
  alltimelowprice  Float
  alltimehighprice Float
  pricedata        Pricecheckpoints[]
  owner            User               @relation(fields: [ownerId], references: [email], onDelete: Cascade)
  ownerId          String
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  image    String
  products Product[]
}
