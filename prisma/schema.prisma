
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product {
  id  Int @id @default(autoincrement())
  name String
  price Float
  currency String
  image String
  provider String?
  owner    User     @relation(fields: [ownerId], references: [email])
  ownerId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String
  image   String
  products Product[]
}